<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard_scroll_view_portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23272A"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
    
            <ImageView
            android:id="@+id/headerImage"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/discord"/>

            <TextView
            android:id="@+id/tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Mode"
            android:layout_marginStart="140dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5865F2"
            android:layout_below="@id/headerImage"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bugs"
                android:drawableTop="@drawable/icon1"
                android:layout_below="@id/tip1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="45dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patch"
                android:drawableTop="@drawable/icon2"
                android:layout_toEndOf="@id/button1"
                android:layout_below="@id/tip1"
                android:layout_margin="10dp"/>/>


            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fork"
                android:drawableTop="@drawable/icon3"
                android:layout_toEndOf="@id/button2"
                android:layout_below="@id/tip1"
                android:layout_margin="10dp"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/icon4"
            android:text="Inspect" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/button4"
            android:drawableTop="@drawable/icon5"
            android:text="Debug" />

        <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log"
                android:drawableTop="@drawable/icon6"
                android:layout_toEndOf="@id/button5"
                android:layout_below="@id/button3"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Module"
                android:drawableTop="@drawable/icon7"
                android:layout_alignParentStart="true"
                android:layout_below="@id/button4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="45dp"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button5"

                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/button7"
                android:drawableTop="@drawable/icon8"
                android:text="Plugin" />
        </RelativeLayout>

    </ScrollView>